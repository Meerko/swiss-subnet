---
import { Image } from "astro:assets";

const { data } = Astro.props;
---

<section class="bg-zinc-200/50">
  <div
    class="grid md:grid-cols-2 gap-16 container mx-auto px-4 md:px-6 items-center py-16"
  >
    <div class="flex flex-col items-start gap-4">
      <Image
        src={data.ascii.asset.url}
        height={500}
        width={500}
        alt=""
        class="w-full h-full object-contain max-w-96 md:max-w-none mx-auto"
      />
    </div>
    <div class="flex flex-col items-start gap-4">
      <h3 class="pill">{data.title}</h3>
      <h4 class="t-1 font-[500]">{data.headline}</h4>
      <p class="opacity-70 text-xl mt-4 max-w-lg">
        {data.text}
      </p>
    </div>
  </div>
</section>
