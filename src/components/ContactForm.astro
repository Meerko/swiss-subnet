<section>
  <form
    action="https://api.web3forms.com/submit"
    method="POST"
    class="flex flex-col gap-4 max-w-lg mx-auto"
  >
    <!-- Replace with your Access Key -->
    <input
      type="hidden"
      name="access_key"
      value="0f9636d5-536a-4af4-ad02-075b78dd82de"
    />

    <!-- Form Inputs. Each input must have a name="" attribute -->
    <input
      type="text"
      name="name"
      required
      class="text-black border border-black p-4"
    />
    <input
      type="email"
      name="email"
      required
      class="text-black border border-black p-4"
    />
    <textarea name="message" required class="text-black border border-black p-4"
    ></textarea>

    <!-- Honeypot Spam Protection -->
    <input
      type="checkbox"
      name="botcheck"
      class="hidden"
      style="display: none;"
    />

    <!-- Custom Confirmation / Success Page -->
    <!-- <input type="hidden" name="redirect" value="https://mywebsite.com/thanks.html"> -->

    <button type="submit">Submit Form</button>
  </form>
</section>
